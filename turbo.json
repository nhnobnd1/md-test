{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"lint": {
			"outputs": []
		},
		"dev": {
			"cache": false
		},
		"build-dev": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		}
	},
	"globalDependencies": [
		"$HOST",
		"$SHOPIFY_API_KEY",
		"$FRONTEND_PORT",
		"$npm_lifecycle_event",
		"$BACKEND_PORT",
		"$CI"
	]
}
